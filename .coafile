[redvox]
files = redvox/**.py
ignore = redvox/api900/lib/api900_pb2.py, redvox/tests/**.py

[redvox.spacing]
bears = SpaceConsistencyBear
use_spaces = True

[redvox.pep8]
bears = PEP8Bear
max_line_length = 120

[redvox.pylint]
bears = PyLintBear
pylint_disable = C0301, W0105, F0002, C1801

[redvox.bandit]
bears = BanditBear
bandit_skipped_tests = B322